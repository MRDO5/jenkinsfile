pipeline {
    agent any

    parameters {
         string(name: 'tomcat_dev', defaultValue: 'localhost', description: 'Staging Server')
         string(name: 'tomcat_prod', defaultValue: 'localhost', description: 'Production Server')
    }

    triggers {
         pollSCM('* * * * *')
     }

stages{
        stage('Build'){
            steps {
                sh 'mvn clean package'
            }
            post {
                success {
                    echo 'Now Archiving...'
                    archiveArtifacts artifacts: '**/*.war'
                }
            }
        }

        stage ('Deployments'){
            parallel{
                stage ('Deploy to Staging'){
                    steps {
                        sh "cp **/*.war ${params.tomcat_dev}:/root/apache-tomcat-8.5.33-stage/webapps"
                    }
                }

                stage ("Deploy to Production"){
                    steps {
                        sh "cp **/*.war ${params.tomcat_dev}:/root/apache-tomcat-8.5.33-prod/webapps"
                    }
                }
            }
        }
    }
}
